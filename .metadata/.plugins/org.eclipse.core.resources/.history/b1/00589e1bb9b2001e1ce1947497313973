package com.jdc.weekend.controller;

import org.springframework.stereotype.Controller;
import org.springframework.ui.ModelMap;
import org.springframework.validation.BindingResult;
import org.springframework.validation.annotation.Validated;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;

import com.jdc.weekend.model.input.ProfileEditForm;

@Controller
@RequestMapping("member/profile")
public class MemberProfileController {
	
	@GetMapping()
	String profile(ModelMap model) {
		return "member-profile";
	}
	
	@GetMapping("edit")
	String editProfile(ModelMap model) {
		return "member-profile-edit";
	}
	
	@PostMapping("edit")
	String saveProfile(
			@Validated ProfileEditForm form,BindingResult result) {
		return "redirect:/member/profile";
	}
}
